<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.akash2099.firebaseapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".NewUserRegistrationNotification"></activity>
        <activity android:name=".PhoneAuthenticationWelcome" />
        <activity android:name=".PhoneAuthenticationNumberVerify" />
        <activity android:name=".ReadRecyclerView">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UploadVideoFirebase" />
        <activity android:name=".UploadImageFirebase" />
        <activity android:name=".PhoneAuthenticationFirst" />
        <activity android:name=".ShowDataListViewActivity" />
        <activity android:name=".RealtimeDataActivity" />
        <activity android:name=".MainActivity" />

        <service android:name=".services.MyFirebaseInstanceService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>